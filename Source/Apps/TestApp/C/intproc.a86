intproc_TEXT    CSEG

        .186

newintproc:
        push ax                 ; dummy for retf address
        push ax                 ; dummy for retf address
        push bp
        mov bp,sp
        push ax
        push ds
        mov ax,DATA
        mov ds,ax

        mov al,[counter_].b     ; / count on...
        inc al                  ;
        and al,7                ; till max. 7, restart with 0...
        mov [counter_].b,al     ; \___
        
        push si                 ; /
        push di                 ;  put the register values at a save place...
        push es                 ; 
        push cx                 ; \

        mov ah,al
        and al,1
        cmp al,0               ; if even, Bitplane 2
        jz set2
        mov al,ah

        cmp al,3                ; if 3 - Bitplane 0
        jz set0
      set1:                     ; else 1
        mov si,pic1_            ; /
        jmp ok
      set2:
        mov si,pic2_            ;  Set SI, to the Adress of the correct bitplane
        jmp ok
      set0:
        mov si,pic0_
      ok:                       ; \

        mov ax,0F000h           ; / ES:[DI] => F000h:[0100h]
        mov di,100h             ;
        mov es,ax               ; \

        mov cx, 1600           ; 1600 Words = 3200 Bytes = 160*160 Bits (to move)
        rep movsw              ; move the Words...

        pop cx                 ; /
        pop si                 ; 
        pop di                 ;  Okay, now restore them...
        pop es                 ; \                 

        mov ax,[oldintvec]
        mov [bp+2],ax
        mov ax,[oldintvec+2]
        mov [bp+4],ax
        pop ds
        pop ax
        pop bp
        retf                    ; this will pop the two dummy pushes

setintvec_::
        push ax
        push es
        pushf
        cli
        xor ax,ax
        mov es,ax
        mov ax,es:[INTNR*4]
        mov [oldintvec],ax
        mov ax,es:[INTNR*4+2]
        mov [oldintvec+2],ax
        mov ax,newintproc
        mov es:[INTNR*4].w, ax
        mov ax,cs
        mov es:[INTNR*4+2].w, ax
        popf
        pop es
        pop ax
        retf

resetintvec_::
        push ax
        push es
        pushf
        cli
        xor ax,ax
        mov es,ax
        mov ax,[oldintvec]
        mov es:[INTNR*4],ax
        mov ax,[oldintvec+2]
        mov es:[INTNR*4+2],ax
        popf
        pop es
        pop ax
        retf    
     
